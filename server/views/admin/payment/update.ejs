<%-include ../../partial/header.ejs %> <%-include ../../partial/navbar.ejs %>
<%-include ../../partial/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Jenis pembayaran</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item">
              <a href="/payment">Jenis pembayaran</a>
            </li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form ubah jenis pembayaran</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/update/<%= payment._id %>?_method=PUT " method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Tipe</label>
                  <input
                    type="text"
                    class="form-control"
                    name="type"
                    id="type"
                    value="<%= payment.type %> "
                    placeholder="Masukkan tipe pembayaran"
                    required />
                </div>
                <div class="select2-purple">
                    <label for="banks">Bank</label>
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      style="width: 100%"
                      name="banks" data-placeholder="Pilih Nominal"
                      required>
                      <% banks.forEach(bank=>{ %>
                      <option value="<%= bank._id %>"
                        <% payment.banks.forEach(paymentBank => { %> 
                            <% if(bank._id.toString() === paymentBank._id.toString()){ %> 
                                selected
                           <%  } %> 
                        <% }) %> 
                        >
                        <%= bank.nameBank %>-<%= bank.name %>-<%= bank.noRekening %> 
                      </option>
                      <% }) %>
                    </select>
                  </div>
                
                
              </div>

              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%-include ../../partial/footer.ejs %> <%-include ../../partial/js.ejs %>


