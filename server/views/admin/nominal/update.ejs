<%-include ../../partial/header.ejs %> <%-include ../../partial/navbar.ejs %>
<%-include ../../partial/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Kategori</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item">
              <a href="/nominal">Nominal</a>
            </li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form ubah koin "<%= nominal.coinName %>"</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/nominal/update/<%= nominal._id %>?_method=PUT" method="POST">
                  <div class="card-body">
                    <div class="form-group">
                        <label>Nama koin</label>
                        <select class="form-control select2" style="width: 100%" name="coinName" required>
                        <option value="Gold"
                             <% if(nominal.coinName === "Gold") { %>
                                selected
                                <% } %> 
                                >Gold
                          </option>                                      
                        <option value="Diamond"
                            <% if(nominal.coinName === "Diamond") { %>
                                selected
                            <% } %> 
                            >Diamond
                        </option>
                        <option value="Jewel"
                        <% if(nominal.coinName === "Jewel") { %>
                            selected
                        <% } %> 
                        >Jewel
                        </option>
                        </select>
                      </div>
                    <div class="form-group">
                      <label for="coinQuantity">Jumlah koin</label>
                      <input
                        type="text"
                        class="form-control"
                        name="coinQuantity"
                        id="coinQuantity"
                        value="<%= nominal.coinQuantity %>"
                        placeholder="Masukkan nama kategori" required />
                    </div>
                    <div class="form-group">
                        <label for="price">Harga koin</label>
                        <input
                          type="text"
                          class="form-control"
                          name="price"
                          id="price"
                          value="<%= nominal.price %>"
                          placeholder="Masukkan nama kategori" required />
                      </div>
                  </div>
                  <!-- /.card-body -->

                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                      Simpan
                    </button>
                  </div>
                </form>
              </div>
          <!-- card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%-include ../../partial/footer.ejs %> <%-include ../../partial/js.ejs %>
