<%-include ../../partial/header.ejs %> <%-include ../../partial/navbar.ejs %>
<%-include ../../partial/sidebar.ejs %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item">
              <a href="/Bank">Bank</a>
            </li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah bank</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/create" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama pemilik</label>
                  <input
                    type="text"
                    class="form-control"
                    name="name"
                    id="name"
                    placeholder="Masukkan nama pemilik"
                    required />
                </div>
                <div class="form-group">
                  <label for="bankName">Nama bank</label>
                  <input
                    type="text"
                    class="form-control"
                    name="bankName"
                    id="bankName"
                    placeholder="Masukkan nama bank"
                    required />
                </div>
                <div class="form-group">
                    <label for="noRekening">Rekening</label>
                    <input
                      type="number"
                      class="form-control"
                      name="noRekening"
                      id="noRekening"
                      placeholder="Masukkan nomor rekening"
                      required />
                  </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%-include ../../partial/footer.ejs %> <%-include ../../partial/js.ejs %>
